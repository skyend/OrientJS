    <script>

      Orient.registerFunction('createUser', function(){
        console.log('create');
        var that = this;

        this.executeTask('submit', function(_prevActionResult){
          var resultData = _prevActionResult.data;

          if( resultData.error ){

            that.setValue("modal-title", '회원가입 실패');
            that.setValue("modal-message", 'Error: '+resultData.error.code);
          } else {

            that.setValue("modal-title", '회원가입 완료');
            that.setValue("modal-message", `이메일(${ that.getValue('email') })을 확인하여 이메일 인증을 완료 해 주세요.`);

            // location.href = '/admin/signin?email='+that.getValue('email');
          }

          var modal = that.getMaster().findById('modal');
          that.setValue("modal-opened", true);
          modal.update();
        });
      });

